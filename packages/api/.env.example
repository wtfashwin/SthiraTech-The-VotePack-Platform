# Backend Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
# Format: postgresql://username:password@host:port/database
# Example (Supabase): postgresql://postgres:your-password@db.xxxxx.supabase.co:5432/postgres
# Example (Render): postgresql://user:pass@host/database
DATABASE_URL="postgresql://user:password@host:5432/database"

# JWT Secret Key
# Generate with: openssl rand -hex 32
# IMPORTANT: Use a strong random value in production!
SECRET_KEY="your-secret-key-change-this-in-production-min-32-chars"

# JWT Configuration
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google Gemini API Key (Optional - for AI features)
# Get from: https://makersuite.google.com/app/apikey
# Leave empty to disable AI features
GEMINI_API_KEY=""

# Python Version (Render only)
PYTHON_VERSION="3.11.0"

# Frontend URL (Production only - for CORS)
# Set this to your Vercel deployment URL
# Example: https://your-app.vercel.app
# Leave empty for local development
FRONTEND_URL=""
